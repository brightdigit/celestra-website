---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Celestra" description="The page you're looking for doesn't exist.">
  <div class="error-container">
    <div class="error-content">
      <h1>404</h1>
      <h2>Page Not Found</h2>
      <p>The page you're looking for doesn't exist or has been moved.</p>
      <a href="/" class="home-link">Return to Home</a>
    </div>
  </div>
</Layout>

<style>
  .error-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    padding: 2rem;
  }

  .error-content {
    text-align: center;
    max-width: 600px;
  }

  h1 {
    font-size: 6rem;
    font-weight: 700;
    color: #6366f1;
    margin: 0;
    line-height: 1;
  }

  h2 {
    font-size: 2rem;
    font-weight: 600;
    color: #111;
    margin: 1rem 0;
  }

  p {
    font-size: 1.125rem;
    color: #6b7280;
    margin: 1.5rem 0 2rem;
    line-height: 1.6;
  }

  .home-link {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: #6366f1;
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: background 0.2s, transform 0.2s;
  }

  .home-link:hover {
    background: #4f46e5;
    transform: translateY(-1px);
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 4rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    p {
      font-size: 1rem;
    }
  }
</style>
